# Backend Environment Variables for Vercel Deployment
# Copy this file to .env.local and fill in your actual values

# MongoDB Atlas Configuration
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/bankyapp?retryWrites=true&w=majority"
# Get this from MongoDB Atlas: https://cloud.mongodb.com/

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secure-jwt-secret-key-here-make-it-long-and-random-64-chars"

# Email Configuration (choose one)
# Option 1: Resend (recommended)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Option 2: Nodemailer with Gmail
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Frontend URL (for email verification links)
FRONTEND_URL="https://your-netlify-app.netlify.app"
# For development: "http://localhost:3000"

# Vercel URL (this will be auto-set by Vercel)
VERCEL_URL="https://your-vercel-app.vercel.app"

# Environment
NODE_ENV="production"

# Admin Configuration (for seeding default admin)
DEFAULT_ADMIN_EMAIL="Matt015014@gmail.com"
DEFAULT_ADMIN_PASSWORD="admin123"
DEFAULT_ADMIN_NAME="System Administrator"